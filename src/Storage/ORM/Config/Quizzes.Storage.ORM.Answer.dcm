<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

  <entity name="Quizzes\Storage\ORM\Answer">
    <field name="uuid" type="guid" />
    <field name="name" type="string" length="255" />
    <field name="alias" type="string" length="255" />
    <field name="description" type="string" length="500" />
    <field name="url" type="string" length="255" />
    <id name="uuid" type="integer">
        <generator strategy="UUID" />
    </id>
    <many-to-one field="question" target-entity="Quizzes\Storage\ORM\Question" inversed-by="answers">
        <join-column name="question_id" referenced-column-name="uuid" />
    </many-to-one>
  </entity>
  
</doctrine-mapping>