<doctrine-mapping>
  <entity name="Quiz">
    <field name="id" type="guid" />
    <field name="name" type="string" length="255" />
    <field name="alias" type="string" length="255" />
    <field name="description" type="string" length="500" />
    <field name="url" type="string" length="255" />
    <id name="id" type="integer">
        <generator strategy="UUID" />
    </id>
    <one-to-many field="questions" target-entity="Question" mapped-by="quiz" />
  </entity>
  <entity name="Question">
    <field name="id" type="guid" />
    <field name="name" type="string" length="255" />
    <field name="alias" type="string" length="255" />
    <field name="description" type="string" length="500" />
    <field name="url" type="string" length="255" />
    <id name="id" type="integer">
        <generator strategy="UUID" />
    </id>
    <many-to-one field="quiz" target-entity="Quiz" inversed-by="question">
        <join-column name="question_id" referenced-column-name="id" />
    </many-to-one>
    <one-to-many field="answers" target-entity="Answer" mapped-by="question" />
  </entity>
  <entity name="Answer">
    <field name="id" type="guid" />
    <field name="name" type="string" length="255" />
    <field name="alias" type="string" length="255" />
    <field name="description" type="string" length="500" />
    <field name="url" type="string" length="255" />
    <id name="id" type="integer">
        <generator strategy="UUID" />
    </id>
    <many-to-one field="question" target-entity="Question" inversed-by="answers">
        <join-column name="question_id" referenced-column-name="id" />
    </many-to-one>
  </entity>
</doctrine-mapping>