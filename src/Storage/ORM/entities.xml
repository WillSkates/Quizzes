<doctrine-mapping>
  <entity name="Quizzes\Quiz">
    <field name="uuid" type="guid" />
    <field name="name" type="string" length="255" />
    <field name="alias" type="string" length="255" />
    <field name="description" type="string" length="500" />
    <field name="url" type="string" length="255" />
    <id name="uuid" type="integer">
        <generator strategy="UUID" />
    </id>
    <one-to-many field="questions" target-entity="Quizzes\Question" mapped-by="quiz" />
  </entity>
  <entity name="Quizzes\Question">
    <field name="uuid" type="guid" />
    <field name="name" type="string" length="255" />
    <field name="alias" type="string" length="255" />
    <field name="description" type="string" length="500" />
    <field name="url" type="string" length="255" />
    <id name="uuid" type="integer">
        <generator strategy="UUID" />
    </id>
    <many-to-one field="quiz" target-entity="Quizzes\Quiz" inversed-by="question">
        <join-column name="question_id" referenced-column-name="uuid" />
    </many-to-one>
    <one-to-many field="answers" target-entity="Quizzes\Answer" mapped-by="question" />
  </entity>
  <entity name="Quizzes\Answer">
    <field name="uuid" type="guid" />
    <field name="name" type="string" length="255" />
    <field name="alias" type="string" length="255" />
    <field name="description" type="string" length="500" />
    <field name="url" type="string" length="255" />
    <id name="uuid" type="integer">
        <generator strategy="UUID" />
    </id>
    <many-to-one field="question" target-entity="Quizzes\Question" inversed-by="answers">
        <join-column name="question_id" referenced-column-name="uuid" />
    </many-to-one>
  </entity>
</doctrine-mapping>